# MongoDB Configuration
MONGODB_URL=mongodb://admin:securepassword@localhost:27017/memory_db?authSource=admin&replicaSet=rs0
DATABASE_NAME=memory_db
COLLECTION_NAME=memories

# MongoDB Connection Pool Settings
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=1
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_CACHE_DIR=/app/cache
EMBEDDING_DEVICE=cpu
EMBEDDING_NORMALIZE=true

# MCP Server Configuration
MCP_SERVER_NAME=memory-server
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_DESCRIPTION=AI Memory Management Server

# Memory Management Settings
DEFAULT_PROJECT=default
MAX_SEARCH_RESULTS=20
DEFAULT_IMPORTANCE=0.5
MAX_TEXT_LENGTH=10000
SIMILARITY_THRESHOLD=0.3

# Logging
LOG_LEVEL=INFO

# Environment
ENVIRONMENT=development
DEBUG=false

# Security (Optional)
ENABLE_AUTH=false
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=* 
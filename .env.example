# Environment Configuration
ENVIRONMENT=production
DEBUG=false

# Server Configuration
SERVER_NAME=mcp-memory-server
SERVER_VERSION=1.0.0
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=4
MAX_CONNECTIONS=1000

# Database Configuration
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USERNAME=mcp_user
MONGODB_PASSWORD=your_secure_password
MONGODB_DATABASE=mcp_memory
MONGODB_COLLECTION=memories
MONGODB_MAX_POOL_SIZE=20
MONGODB_MIN_POOL_SIZE=5
MONGODB_USE_SSL=true
MONGODB_SSL_CERT_PATH=/path/to/cert.pem

# Embedding Configuration
EMBEDDING_PROVIDER=sentence_transformers
EMBEDDING_MODEL=all-MiniLM-L6-v2
MODEL_CACHE_DIR=./models
EMBEDDING_BATCH_SIZE=32
MAX_TEXT_LENGTH=512
EMBEDDING_DEVICE=cpu
NORMALIZE_EMBEDDINGS=true

# Memory Configuration
DEFAULT_PROJECT=default
MAX_SEARCH_RESULTS=20
DEFAULT_IMPORTANCE=0.5
MAX_TEXT_LENGTH=10000
SIMILARITY_THRESHOLD=0.3

# Auto-trigger Configuration
AUTO_SAVE_ENABLED=true
TRIGGER_THRESHOLD=0.7
MIN_TEXT_LENGTH=50

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600
ENCRYPTION_ENABLED=false
ENCRYPTION_KEY=your-encryption-key

# CORS Configuration
CORS_ORIGINS=*

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30

# Logging Configuration
LOG_LEVEL=INFO

# OpenAI Configuration (if using OpenAI embeddings)
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Hugging Face Configuration
HUGGINGFACE_TOKEN=your-hf-token

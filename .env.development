# =============================================================================
# MCP Memory Server - Development Environment Configuration
# =============================================================================

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
SERVER_NAME=mcp-memory-server-dev
SERVER_VERSION=1.0.0
SERVER_HOST=localhost
SERVER_PORT=8000
SERVER_WORKERS=1
MAX_CONNECTIONS=100
KEEPALIVE_TIMEOUT=5

# =============================================================================
# DATABASE CONFIGURATION (MongoDB)
# =============================================================================
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USERNAME=mcp_user
MONGODB_PASSWORD=devpassword123
MONGODB_DATABASE=mcp_memory_dev
MONGODB_COLLECTION=memories

# Connection Pooling (smaller for dev)
MONGODB_MAX_POOL_SIZE=5
MONGODB_MIN_POOL_SIZE=1
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# SSL/TLS (disabled for dev)
MONGODB_USE_SSL=false
MONGODB_SSL_CERT_PATH=

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
EMBEDDING_PROVIDER=sentence_transformers
EMBEDDING_MODEL=all-MiniLM-L6-v2
MODEL_CACHE_DIR=./models
EMBEDDING_BATCH_SIZE=16
MAX_TEXT_LENGTH=512
EMBEDDING_DEVICE=cpu
NORMALIZE_EMBEDDINGS=true

# =============================================================================
# MEMORY CONFIGURATION
# =============================================================================
DEFAULT_PROJECT=dev-project
MAX_SEARCH_RESULTS=10
DEFAULT_IMPORTANCE=0.5
MAX_TEXT_LENGTH=5000
SIMILARITY_THRESHOLD=0.3

# =============================================================================
# AUTO-TRIGGER CONFIGURATION
# =============================================================================
AUTO_SAVE_ENABLED=true
TRIGGER_THRESHOLD=0.5
MIN_TEXT_LENGTH=20

# =============================================================================
# SECURITY CONFIGURATION (Relaxed for dev)
# =============================================================================
SECRET_KEY=dev-secret-key-not-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting (disabled for dev)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Encryption (disabled for dev)
ENCRYPTION_ENABLED=false
ENCRYPTION_KEY=

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=*

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================
HEALTH_CHECK_INTERVAL=60

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=DEBUG

# =============================================================================
# REDIS CONFIGURATION (Optional)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

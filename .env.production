# MCP Memory Cloud - Production Environment Configuration

# MongoDB Atlas Configuration
MONGODB_ATLAS_PUBLIC_KEY=your_atlas_public_key_here
MONGODB_ATLAS_PRIVATE_KEY=your_atlas_private_key_here
MONGODB_ATLAS_PROJECT_ID=your_atlas_project_id_here
MONGODB_MASTER_CONNECTION=mongodb+srv://username:password@cluster.mongodb.net/mcp_memory_master

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application URLs
API_BASE_URL=https://api.mcpmemory.cloud
FRONTEND_URL=https://mcpmemory.cloud

# Redis Configuration
REDIS_URL=redis://redis:6379

# Security
JWT_SECRET=your_very_secure_jwt_secret_here
API_RATE_LIMIT=1000

# Environment
NODE_ENV=production
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Domain Configuration
DOMAIN=mcpmemory.cloud
API_DOMAIN=api.mcpmemory.cloud

# Email Configuration (optional)
SENDGRID_API_KEY=your_sendgrid_api_key
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your_sendgrid_api_key

# Analytics (optional)
GOOGLE_ANALYTICS_ID=your_ga_id
MIXPANEL_TOKEN=your_mixpanel_token

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_api_key 
{
  "manifest_version": 3,
  "name": "MCP Memory - Production Ready",
  "version": "2.0.0",
  "description": "Production-ready persistent memory for AI assistants with cloud sync, enhanced security, and multi-platform support",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "host_permissions",
    "alarms",
    "notifications"
  ],
  
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://poe.com/*",
    "https://perplexity.ai/*",
    "https://www.bing.com/*",
    "https://bard.google.com/*",
    "http://localhost:*/*",
    "https://*.your-domain.com/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://poe.com/*",
        "https://perplexity.ai/*",
        "https://www.bing.com/*",
        "https://bard.google.com/*"
      ],
      "js": ["content.js"],
      "css": ["memory-ui.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "MCP Memory - Production Ready",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "memory-panel.html", 
        "memory-widget.html",
        "icons/*",
        "assets/*",
        "templates/*"
      ],
      "matches": [
        "https://chat.openai.com/*", 
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://poe.com/*",
        "https://perplexity.ai/*",
        "https://www.bing.com/*",
        "https://bard.google.com/*"
      ]
    }
  ],
  
  "options_page": "options.html",
  
  "minimum_chrome_version": "88",
  
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://*.your-domain.com/*"
    ]
  }
}

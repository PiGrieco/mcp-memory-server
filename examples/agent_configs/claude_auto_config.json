{
  "mcpServers": {
    "memory-server": {
      "command": "python",
      "args": ["/path/to/mcp-memory-server/main.py"],
      "env": {
        "MONGODB_URL": "mongodb://localhost:27017/memory_db",
        "DATABASE_NAME": "memory_db",
        "EMBEDDING_MODEL": "sentence-transformers/all-MiniLM-L6-v2",
        "LOG_LEVEL": "INFO",
        "ENVIRONMENT": "production",
        "AUTO_TRIGGER": "true",
        "TRIGGER_SENSITIVITY": "medium",
        "AUTO_SAVE_CONVERSATIONS": "true",
        "AUTO_EXTRACT_KNOWLEDGE": "true",
        "CONTEXT_ENHANCEMENT": "true"
      }
    }
  },
  "triggerRules": {
    "saveKeywords": ["ricorda", "salva", "memorizza", "importante", "annota"],
    "searchKeywords": ["cosa abbiamo detto", "precedente", "prima", "ricordi", "avevamo parlato"],
    "decisionPatterns": ["decido", "scelgo", "opto per", "preferisco", "raccomando"],
    "questionPatterns": ["come", "cosa", "quando", "dove", "perch√©", "quale"],
    "techKeywords": ["API", "algoritmo", "database", "framework", "libreria", "funzione"]
  },
  "autoActions": {
    "saveOnKeywords": true,
    "searchOnReference": true,
    "enhanceWithContext": true,
    "trackDecisions": true,
    "extractKnowledge": true,
    "summarizeLongText": true
  }
} 
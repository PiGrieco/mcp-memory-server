# =============================================================================
# MCP Memory Server - Environment Variables Example
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
PROJECT_NAME=mcp_memory_server
DATABASE_NAME=mcp_memory_production

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://admin:password123@mongodb:27017/mcp_memory_production?authSource=admin
MONGODB_DATABASE=mcp_memory_production
MONGODB_COLLECTION=memories
MONGODB_USERNAME=admin
MONGODB_PASSWORD=password123
MONGODB_AUTH_SOURCE=admin
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_IDLE_TIME_MS=60000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=10000
MONGODB_SOCKET_TIMEOUT=10000
MONGODB_CONNECT_TIMEOUT=10000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0
REDIS_MAX_CONNECTIONS=100
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_KEEPALIVE=true

# =============================================================================
# EMBEDDING SERVICE CONFIGURATION
# =============================================================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_MODEL_PATH=/app/models/embeddings
EMBEDDING_CACHE_SIZE=10000
EMBEDDING_BATCH_SIZE=64
EMBEDDING_MAX_LENGTH=512
EMBEDDING_DEVICE=auto
EMBEDDING_DOWNLOAD_IF_MISSING=false

# =============================================================================
# MEMORY SERVICE CONFIGURATION
# =============================================================================
MEMORY_AUTO_SAVE=true
MEMORY_TRIGGER_THRESHOLD=0.8
MEMORY_MIN_TEXT_LENGTH=50
MEMORY_MAX_TEXT_LENGTH=15000
MEMORY_DEFAULT_PROJECT=default
MEMORY_RETENTION_DAYS=365
MEMORY_MAX_MEMORIES=1000000
MEMORY_CLEANUP_INTERVAL=86400

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_ENABLED=true
CACHE_TYPE=redis
CACHE_MEMORY_TTL=7200
CACHE_SEARCH_TTL=3600
CACHE_MAX_MEMORY_SIZE=10000

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90
BACKUP_COMPRESSION=true
BACKUP_STORAGE_TYPE=s3
BACKUP_STORAGE_PATH=s3://mcp-memory-backups

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
NOTIFICATIONS_ENABLED=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com
WEBHOOK_URL=https://your-webhook-url.com
WEBHOOK_TOKEN=your-webhook-token

# =============================================================================
# EXPORT CONFIGURATION
# =============================================================================
EXPORT_FORMATS=json,csv,markdown
EXPORT_COMPRESSION=true
EXPORT_INCLUDE_EMBEDDINGS=false
EXPORT_BATCH_SIZE=500
EXPORT_MAX_FILE_SIZE=104857600

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
LOG_METRICS=true
ALERTING_ENABLED=true
ALERT_WEBHOOK_URL=https://your-alert-webhook.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
API_KEY_REQUIRED=true
API_KEY=your-secure-api-key-here
CORS_ENABLED=true
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
RATE_LIMITING_ENABLED=true
RATE_LIMITING_REQUESTS_PER_MINUTE=100
RATE_LIMITING_BURST_LIMIT=200
SSL_REQUIRED=true
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
MAX_CONCURRENT_REQUESTS=500
REQUEST_TIMEOUT=30
MEMORY_LIMIT=4GB
WORKER_PROCESSES=8

# =============================================================================
# AWS CONFIGURATION (for S3 backups and exports)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=mcp-memory-backups

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_ROTATION=true
LOG_MAX_FILE_SIZE=100MB
LOG_BACKUP_COUNT=10
LOG_CONSOLE_OUTPUT=false
LOG_FILE_OUTPUT=true
LOG_AGGREGATION_ENABLED=true
LOG_AGGREGATION_ENDPOINT=https://your-log-aggregation-service.com

# =============================================================================
# PLUGIN CONFIGURATION
# =============================================================================
PLUGINS_AUTO_LOAD=true
PLUGINS_ENABLED=memory_analytics,backup_manager,notification_service
PLUGINS_DISABLED=

# =============================================================================
# DEVELOPMENT CONFIGURATION (for local development)
# =============================================================================
# Uncomment and modify these for local development
# ENVIRONMENT=development
# DEBUG=true
# LOG_LEVEL=DEBUG
# MONGODB_URI=mongodb://localhost:27017/mcp_memory_dev
# REDIS_HOST=localhost
# REDIS_PASSWORD=
# CACHE_ENABLED=false
# BACKUP_ENABLED=false
# NOTIFICATIONS_ENABLED=false
# API_KEY_REQUIRED=false
# SSL_REQUIRED=false 